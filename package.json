{
  "name": "react-kit",
  "version": "1.0.0",
  "description": "React Starter Kit",
  "scripts": {
    "start": "webpack serve --mode=development",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint src --ext .js,.jsx",
    "lint:css": "stylelint 'src/**/*.{css,scss,sass}' --allow-empty-input",
    "build": "webpack --mode=production",
    "build:analyzer": "webpack-dashboard -- yarn build",
    "build:server": "yarn build && yarn server",
    "test": "yarn test:cypress:run",
    "test:cypress:run": "yarn build && yarn server & cypress run --quiet",
    "test:cypress:open": "yarn build && yarn server & cypress open",
    "server": "serve build",
    "deploy:vercel": "vercel"
  },
  "author": "Giorgio Acosta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com:gioacostax/react-kit.git"
  },
  "app": {
    "title": "App",
    "description": "React Starter Kit.",
    "start_url": "/",
    "src_alias": "src",
    "static_dir": "src/static",
    "index_html": "src/index.ejs",
    "main_js": "src/index.jsx"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@gioacostax/icons": "^1.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/react": "^16.9.56",
    "autoprefixer": "^10.0.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "copy-webpack-plugin": "^6.3.1",
    "css-loader": "^5.0.1",
    "cypress": "^5.6.0",
    "error-overlay-webpack-plugin": "^0.4.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0-alpha.14",
    "mini-css-extract-plugin": "^1.3.1",
    "mobx": "^6.0.4",
    "mobx-react": "^7.0.5",
    "mobx-react-lite": "^3.1.6",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.1.7",
    "postcss-loader": "^4.0.4",
    "preact": "^10.5.7",
    "process": "^0.11.10",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-refresh": "^0.9.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.1.0",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "serve": "^11.3.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-scss": "^3.18.0",
    "terser-webpack-plugin": "^5.0.3",
    "vercel": "^20.1.4",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dashboard": "^3.2.1",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-remove-block-loader": "^1.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-export-default-from",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "cypress"
    ],
    "ignorePatterns": [
      "**/build",
      "**/node_modules"
    ],
    "env": {
      "browser": true,
      "cypress/globals": true
    },
    "rules": {
      "no-console": 0,
      "comma-dangle": 0,
      "lines-between-class-members": 0,
      "no-nested-ternary": 0,
      "object-curly-newline": [
        "warn",
        {
          "ObjectPattern": {
            "multiline": true,
            "minProperties": 5
          }
        }
      ],
      "prefer-arrow-callback": 0,
      "import/extensions": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "src/",
            "^./styles"
          ]
        }
      ],
      "react/prop-types": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/jsx-props-no-spreading": 0,
      "jsx-a11y/no-noninteractive-element-interactions": [
        "error",
        {
          "handlers": [
            "onClick"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "max-nesting-depth": 4,
      "selector-max-id": null,
      "order/properties-alphabetical-order": null,
      "selector-no-qualifying-type": null
    }
  }
}
